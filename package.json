{
  "name": "plaidhealth",
  "version": "1.0.0",
  "private": true,
  "description": "VerziHealth - Healthcare Data API Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@plaidhealth/api",
    "dev:portal": "npm run dev --workspace=@plaidhealth/developer-portal",
    "dev:marketing": "npm run dev --workspace=@plaidhealth/marketing-site",
    "start": "npm run start --workspace=@plaidhealth/api",
    "build:portal": "npm run build --workspace=@plaidhealth/developer-portal",
    "build:marketing": "npm run build --workspace=@plaidhealth/marketing-site"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
